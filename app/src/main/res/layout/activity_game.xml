<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Game.Game">

    <EditText
            android:freezesText="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtPlayer1" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.08" app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:freezesText="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtPlayer3"
            app:layout_constraintTop_toBottomOf="@+id/txtPlayer2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.08"
    />
    <EditText
            android:freezesText="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtPlayer4" app:layout_constraintTop_toBottomOf="@+id/txtPlayer3"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.08"/>
    <EditText
            android:freezesText="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtPlayer5"
            app:layout_constraintTop_toBottomOf="@+id/txtPlayer4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.08"/>
    <EditText
            android:freezesText="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtPlayer6"
            app:layout_constraintTop_toBottomOf="@+id/txtPlayer5" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.08"/>
    <EditText
            android:freezesText="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtPlayer7"
            app:layout_constraintTop_toBottomOf="@+id/txtPlayer6" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.08"/>
    <EditText
            android:freezesText="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtPlayer2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.08" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="544dp" app:layout_constraintTop_toBottomOf="@+id/txtPlayer1"
            app:layout_constraintVertical_bias="0.0" android:importantForAutofill="no"/>
    <EditText
            android:freezesText="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtPlayer8"
            app:layout_constraintTop_toBottomOf="@+id/txtPlayer7" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.08"/>
    <EditText
            android:freezesText="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtWinCondition"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.08" android:hint="win condition"
            app:layout_constraintTop_toBottomOf="@+id/txtThrown"/>
    <EditText
            android:freezesText="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtThrown" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintVertical_bias="0.916" android:hint="thrown"/>
    <Button
            android:text="Confirm Win Condition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnWinCondition" app:layout_constraintStart_toEndOf="@+id/txtWinCondition"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/btnThrown" app:layout_constraintVertical_bias="0.666"/>
    <Button
            android:text="confirm points"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnThrown" app:layout_constraintStart_toEndOf="@+id/txtThrown"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.138"
            app:layout_constraintVertical_bias="0.916"/>
    <TextView
            android:freezesText="true"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:id="@+id/tvPoint1" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/txtPlayer1" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:freezesText="true"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:id="@+id/tvPoint2" app:layout_constraintTop_toBottomOf="@+id/tvPoint1"
            app:layout_constraintStart_toEndOf="@+id/txtPlayer2" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:freezesText="true"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:id="@+id/tvPoint3" app:layout_constraintStart_toEndOf="@+id/txtPlayer3"
            app:layout_constraintTop_toBottomOf="@+id/tvPoint2" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:freezesText="true"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:id="@+id/tvPoint4"
            app:layout_constraintTop_toBottomOf="@+id/tvPoint3" app:layout_constraintStart_toEndOf="@+id/txtPlayer4"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:freezesText="true"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:id="@+id/tvPoint5"
            app:layout_constraintTop_toBottomOf="@+id/tvPoint4" app:layout_constraintStart_toEndOf="@+id/txtPlayer5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:freezesText="true"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:id="@+id/tvPoint6"
            app:layout_constraintTop_toBottomOf="@+id/tvPoint5" app:layout_constraintStart_toEndOf="@+id/txtPlayer6"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:freezesText="true"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:id="@+id/tvPoint7"
            app:layout_constraintTop_toBottomOf="@+id/tvPoint6" app:layout_constraintStart_toEndOf="@+id/txtPlayer7"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:freezesText="true"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:id="@+id/tvPoint8"
            app:layout_constraintTop_toBottomOf="@+id/tvPoint7" app:layout_constraintStart_toEndOf="@+id/txtPlayer8"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="go back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_back" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.846"/>
    <TextView
            android:freezesText="true"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:id="@+id/tvCheckOut" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.785"/>
</androidx.constraintlayout.widget.ConstraintLayout>